<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#DCDCDC"
    android:orientation="vertical"
    tools:context=".Fragment.ProfilFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_margin"

        android:layout_marginBottom="@dimen/horizontal_margin"

        android:padding="@dimen/horizontal_margin">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_item_photo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/horizontal_margin"
            tools:src="@drawable/ic_profil"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_item_photo"
            android:layout_toEndOf="@id/img_item_photo"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Kamak Amanaulloh"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/tv_item_remarks"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:layout_height="wrap_content"
                tools:text="kamakamanulloh10@gmail.com"/>
        </LinearLayout>
    </RelativeLayout>

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/horizontal_margin"

       android:layout_marginBottom="@dimen/horizontal_margin"

       android:background="@android:color/white">
       <TextView
           android:layout_marginTop="@dimen/horizontal_margin"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/white"
           android:text="085707297725"/>
   </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_margin"

        android:layout_marginBottom="@dimen/horizontal_margin"

        android:background="@android:color/white">
        <TextView
            android:layout_marginTop="@dimen/horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Ganti Password"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_margin"

        android:layout_marginBottom="@dimen/horizontal_margin"

        android:background="@android:color/white">
       <Button
           android:drawableLeft="@mipmap/ic_fb"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@android:color/transparent"
           android:text="Kunjungi Kami di Facebook"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_margin"

        android:layout_marginBottom="@dimen/horizontal_margin"

        android:background="@android:color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_ig"
            android:background="@android:color/transparent"
            android:text="Kunjungi Kami di Instagram"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_margin"

        android:layout_marginBottom="@dimen/horizontal_margin"

        android:background="@android:color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_star"
            android:background="@android:color/transparent"
            android:text="Kunjungi Kami di Rating"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/horizontal_margin"

        android:layout_marginBottom="@dimen/horizontal_margin"

        android:background="@android:color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Sign Out"
            android:textColor="@android:color/holo_red_dark"/>
    </android.support.v7.widget.CardView>


    <!-- TODO: Update blank fragment layout -->


</LinearLayout>