<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/horizontal_margin"
    android:layout_marginTop="@dimen/horizontal_margin"
    android:layout_marginLeft="@dimen/horizontal_margin"
    android:layout_marginBottom="@dimen/horizontal_margin"
    tools:context=".Activity.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_height="80dp"
        android:id="@+id/img"
        android:layout_marginBottom="@dimen/horizontal_margin"
        android:src="@drawable/splashjofoodlogobar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="33dp"
        tools:ignore="MissingConstraints" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/img"
        android:id="@+id/username"
        android:textColorHint="@android:color/holo_green_dark"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtusername"
            android:layout_height="wrap_content"
            android:hint="Username"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/username"
        android:id="@+id/pswd"


        android:textColorHint="@android:color/holo_green_dark"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtpswd"
            android:layout_height="wrap_content"
            android:hint="Password"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/pswd"
        android:id="@+id/email"


        android:textColorHint="@android:color/holo_green_dark"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtemail"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_below="@id/email"
        android:id="@+id/nohp"


        android:textColorHint="@android:color/holo_green_dark"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:id="@+id/txtnohp"
            android:layout_height="wrap_content"
            android:hint="No Hp"
            android:inputType="phone"
            />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nohp"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:text="Daftar"

        android:id="@+id/btndaftar"
        android:textColor="@android:color/white"
        android:background="#32CD32"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/atau"
        android:text="Atau"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/btndaftar"
        android:gravity="center"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/atau"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        facebook:com_facebook_login_text="Login with Facebook"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah Punya Akun ?"
        android:textStyle="bold"
        android:gravity="center"

        android:id="@+id/ask"
        android:layout_below="@id/loginButton"
        android:layout_marginTop="@dimen/horizontal_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginButton"
        android:layout_toRightOf="@id/ask"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:layout_marginLeft="5dp"
        android:text="Silahkan Login"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:id="@+id/tvlogin"/>


</RelativeLayout>